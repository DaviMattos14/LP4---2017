<Window x:Class="Wpf_Carro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="259">
    <Grid Margin="0,0,-8,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnCadastrar" Content="Cadastrar" HorizontalAlignment="Left" Margin="63,54,0,0" VerticalAlignment="Top" Width="124" Height="26" Grid.ColumnSpan="2" Click="btnCadastrar_Click"/>
        <Button x:Name="btnConsultar" Content="Consultar" HorizontalAlignment="Left" Margin="63,100,0,0" VerticalAlignment="Top" Width="124" Height="27" Grid.ColumnSpan="2" Click="btnConsultar_Click"/>
        <Button x:Name="btnDados" Content="Dados Salvos" HorizontalAlignment="Left" Margin="63,188,0,0" VerticalAlignment="Top" Width="124" Height="25" Grid.ColumnSpan="2" Click="btnDados_Click"/>
        <Button x:Name="btnAlterar" Content="Altualizar" HorizontalAlignment="Left" Margin="63,146,0,0" VerticalAlignment="Top" Width="124" Grid.ColumnSpan="2" Height="24" Click="btnAlterar_Click"/>

    </Grid>

</Window>
